  "name": "string",
  "brand": "string",
  "price": 0.1,
  "quantity": 1073741824,
  "category": "string"
}
Responses:
{
  "name": "string",
  "brand": "string",
  "price": 0.1,
  "quantity": 1073741824,
  "category": "string"
}

